{
  "name": "bun-bp-cic-clone",
  "version": "0.0.1",
  "author": "Color in Code",
  "module": "./app.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run dev.ts",
    "start": "bun --watch ./src/ts/app.ts",
    "clear-dist": "rimraf --glob dist/*",
    "clear-prod": "rimraf --glob prod/*",
    "clean": "npm run clear-dist && npm run clear-prod",
    "lint": "bun biome start && bun biome lint --write .",
    "format": "bun biome format --write .",
    "prod": "bun run prod.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/bun": "^1.1.10",
    "@types/node": "^22.7.3",
    "bun-lightningcss": "^0.2.0",
    "postcss": "^8.4.47",
    "postcss-custom-properties": "^14.0.1",
    "postcss-import": "^16.1.0",
    "postcss-modules": "^6.0.0",
    "postcss-nested": "^6.2.0",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@types/gsap": "^3.0.0",
    "@types/three": "^0.169.0",
    "@types/websocket": "^1.0.10",
    "browserslist": "^4.24.0",
    "glob": "^11.0.0",
    "gsap": "^3.12.5",
    "lightningcss": "^1.27.0",
    "sass": "^1.79.3",
    "sharp": "^0.33.5",
    "three": "^0.169.0"
  }
}
