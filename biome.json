{
    "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
    "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
    },
    "files": { 
        "ignoreUnknown": true, 
        "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.css", "src/**/*.scss"],
        "ignore": [] },
    "formatter": { 
        "enabled": false, 
        "indentStyle": "tab",
        "formatWithErrors": false,
        "indentWidth": 3,
        "lineEnding": "lf"
    },
    "organizeImports": { "enabled": true },
    "linter": {
      "enabled": true,
      "rules": { "recommended": true }
    },
    "javascript": { 
        "formatter": { 
            "quoteStyle": "single",
            "quoteProperties": "asNeeded",
            "trailingCommas": "all",
            "semicolons": "asNeeded",
            "arrowParentheses": "always",
            "bracketSpacing": true

             } 
    },
    "css": {
          "formatter": { 
            "enabled": true
        
        
         },
          "linter": { 
            "enabled": true
       
         }
        }
      
  }